=form_for(@post) do |f|
  -if @post.errors.any?
    #error_explanation
      %h2
        =pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        =@post.errors.full_messages.each do |msg|
          %li
            =msg
  .field
    =f.label :title
    %br
    =f.text_field :title
  .field
    =f.label :description
    %br
    =f.text_area :description
  .field
    =f.label :body
    %br
    =f.text_area :body, class: 'tinymce'
  .field
    =f.label :publish
    %br
    =f.check_box :publish
  .actions
    =f.submit
